<form asp-action="Index">
    <div>
        Category:
        <select name="id" >
            <option value="0">All</option>
            @foreach (var item in ViewBag.Options){
                @if (item.CategoryId == ViewBag.Id)
                {
                    <option selected="selected" value="@item.CategoryId">@item.Name</option>
                }
                else
                {
                    <option value="@item.CategoryId">@item.Name</option>
                }
                
            }            
        </select>
        Name: <input name="inputString" value="@ViewBag.InputString"/>
        &nbsp;
        <input type="submit" value="Search" />
    </div>
</form>

<div style="padding:10px;">
    </div>