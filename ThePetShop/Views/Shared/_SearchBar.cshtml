
<form asp-action="Index">
	<div>
		<div class="input-group mb-3">
			<div class="input-group-prepend col-auto d-flex" >
				<span class="input-group-text" id="inputGroup-sizing-default">Category: </span>
			
				<select name="id" class="form-select">
					<option value="0">All</option>
					@foreach (var item in ViewBag.Options)
					{
						@if (item.CategoryId == ViewBag.Id){
							<option selected="selected" value="@item.CategoryId">@item.Name</option>
						} else {
							<option value="@item.CategoryId">@item.Name</option>
						}
					}
				</select>
			</div>
			<div class="input-group-prepend col d-flex">
					<span class="input-group-text" id="inputGroup-sizing-default">Name: </span>
			<input name="inputString" placeholder="Name..." style="min-width:fit-content" class="form form-control" value="@ViewBag.InputString" />
			</div>
			<div class="input-group-prepend col d-flex">
					<span class="input-group-text" id="inputGroup-sizing-default">Spesies: </span>
			<input name="inputSpecies" placeholder="Spesies..." style="min-width:fit-content" class="form form-control" value="@ViewBag.InputSpecies" />
			</div>
			<input type="submit" class="btn btn-dark  col-form-label-lg" value="Search">
			
		</div>

	</div>
</form>
