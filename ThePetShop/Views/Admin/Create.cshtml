@model ThePetShopApp.Models.Animal

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animal</h4>
<hr />
<div class="row">
	<div class="input-group mb-3">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="input-group mb-3">
				<label asp-for="Name" class="input-group-text"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<label asp-for="Species" class="input-group-text"></label>
				<input asp-for="Species" class="form-control" />
				<span asp-validation-for="Species" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<label asp-for="Age" class="input-group-text"></label>
				<input asp-for="Age" class="form-control" />
				<span asp-validation-for="Age" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<label asp-for="PictureFile" class="input-group-text"></label>
				<input asp-for="PictureFile" required="required" class="form-control" accept="image/*" />
				<span asp-validation-for="PictureFile" class="text-danger"></span>
			</div>
			<div class="input-group mb-3">
				<label asp-for="CategoryId" class="input-group-text"></label>
				<select asp-for="CategoryId" class="form-control" >
					@foreach(var option in ViewBag.Categories){
						<option value="@option.CategoryId">@option.Name</option>
					}
				</select>
			</div>
			<div class="input-group mb-3">
				<label asp-for="Description" class="input-group-text" id="inputGroup-sizing-lg"></label>
				<textarea asp-for="Description" maxlength="249" class="form-control flex-wrap" rows="8">

				</textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
